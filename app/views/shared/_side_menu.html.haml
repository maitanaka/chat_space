.chat-user
  %h5.chat-user__name-title
    =current_user.name
  .chat-user__actions.clearfix
    = link_to new_chat_group_path, class: 'chat-user__actions__post' do
      %i.fa.fa-pencil-square-o
    = link_to edit_user_registration_path(current_user),class: "chat-user__actions__settings" do
      %i.fa.fa-cog

%ul.chat-groups
  - @chat_groups.each do |chat_group|
    %li.chat-group.clearfix
      .chat-group__name
        = link_to chat_group.group_name, chat_group_messages_path(chat_group)
      - if chat_group.messages.present?
        %p.chat-group__message
          = chat_group.messages.last.text
