.content
  .content-side
    = render partial: 'shared/side_menu'

  .content-main
    .chat-header.clearfix
      .chat-header--left
        %h2.group-name tech-masterグループ
        %p.users
          Members: mai

      .chat-header--right
        %a.edit-btn Edit

    .chat-body
      .chat-messages
        .chat-messages__message
          .chat-message__header.clearfix
            %p.chat-message__name 名前
            %p.chat-message__date 2016/10/03 06:44:34
          %p.chat-message__content メッセージ

    .chat-footer
      .chat-footer__body
        %textarea{ rows: 1,placeholder: "Type a message" }
        %label.chat-footer__file
          %i.fa.fa-picture-o{ aria: {hidden: :true} }
        %input{ type: "submit", value: "Send" }
