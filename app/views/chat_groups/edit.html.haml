.chat-group-form
  %h1 チャットグループ編集
  .chat-group-form__field.clearfix
    = form_for @chat_group, html: {id: 'edit_chat_group_22', class: 'edit_chat_group' } , url: chat_group_path do |f|
      .chat-group-form__field--left
        %label.chat-group-form__label グループ名
      .chat-group-form__field--right
        = f.text_field :group_name, placeholder: "グループ名を入力してください", id: "chat_group_name", class: "chat-group-form__input", value: @chat_group.group_name
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          %label.chat-group-form__label チャットメンバーを追加
        .chat-group-form__field--right
          .chat-group-form__search.clearfix
            %input#user-search-field.chat-group-form__input{:placeholder => "追加したいユーザー名を入力してください", :type => "text"}/
          #user-search-result
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          %label.chat-group-form__label チャットメンバー
          = f.fields_for :chat_groups_users do |chat_groups_user|
            = chat_groups_user.hidden_field :user_id, value: current_user.id
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
        .chat-group-form__field--right
          = f.submit "Save", class: "chat-group-form__action-btn"
